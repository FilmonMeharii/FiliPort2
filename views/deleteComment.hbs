<h1>Delete Comment</h1>

<form action="" method="POST" class="container">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="{{comment.username}}" disabled>
    </div>
    
    <div class="form-group">
        <label for="projectTitle">Project Title:</label>
        <input type="text" id="projectTitle" name="projectTitle" value="{{comment.projectTitle}}" disabled>
    </div>
    
    <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea id="comment" name="comment" rows="4" disabled>{{comment.comment}}</textarea>
    </div>
    
    <button type="submit" class="btn">Delete Comment</button>
</form>