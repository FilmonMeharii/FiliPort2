<h1>Delete Project</h1>

<form action="/projects/delete" method="POST" class="container">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{title}}" disabled>
    </div>
    
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" value="{{description}}" disabled>
    </div>
    
    <div class="form-group">
        <label for="createdDate">Created Date:</label>
        <input type="date" id="createdDate" name="createdDate" value="{{createdDate}}" disabled>
    </div>
    
    <div class="form-group">
        <label for="lastUpdatedDate">Last Updated Date:</label>
        <input type="date" id="lastUpdatedDate" name="lastUpdatedDate" value="{{lastUpdatedDate}}" disabled>
    </div>
    
    <button type="submit" class="btn">Delete Project</button>
</form>
